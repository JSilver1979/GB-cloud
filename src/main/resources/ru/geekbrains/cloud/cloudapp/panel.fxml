<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="5.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.geekbrains.cloud.cloudapp.PanelController">
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
   <children>
      <HBox prefHeight="0.0" prefWidth="0.0">
         <children>
            <ComboBox fx:id="disksBox" prefWidth="50.0" onAction="#selectDiskAction"/>
            <TextField fx:id="pathField" HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" text="Вверх" onAction="#btnPathUp"/>
         </children>
      </HBox>
      <TableView fx:id="filesTable" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
   </children>
    <properties>
        <ctrl><fx:reference source="controller" /></ctrl>
    </properties>
</VBox>
